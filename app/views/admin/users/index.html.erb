<div class="container mx-auto mt-12 px-4">
  <h1 class="text-3xl font-bold text-center mb-6">Users</h1>

  <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
    <% @users.each do |user| %>
      <div class="p-6 border border-gray-300 rounded-lg shadow-sm flex flex-col justify-between">
        <div>
          <h2 class="text-lg font-semibold mb-2"><%= user.first_name %> <%= user.last_name %></h2>
          <p class="text-sm text-gray-600 mb-1">Email: <%= user.email %></p>
          <p class="text-sm text-gray-600">Username: <%= user.username %></p>
        </div>
        <div class="mt-4 flex justify-between">
          <%= link_to 'View', admin_user_path(user), class: 'text-blue-500 hover:underline' %>
          <%= link_to 'Edit', edit_admin_user_path(user), class: 'text-green-500 hover:underline' %>
          <%= link_to 'Delete', admin_user_path(user), method: :delete, data: { confirm: 'Are you sure?' }, class: 'text-red-500 hover:underline' %>
        </div>
      </div>
    <% end %>
  </div>

  <div class="text-center mt-8">
    <%= link_to 'Create New User', new_admin_user_path, class: 'px-4 py-2 bg-green-500 text-white rounded-lg shadow hover:bg-green-600' %>
  </div>
</div>
