<h1 class="text-3xl font-semibold text-center my-6">Create New Category</h1>

<%= form_with(model: @category, url: admin_categories_path, local: true, class: 'space-y-6 max-w-lg mx-auto') do |f| %>
  <div class="space-y-4">
    <%= f.label :name, 'Category Name', class: 'block text-lg font-medium text-gray-700' %>
    <%= f.text_field :name, class: 'w-full p-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500' %>

    <% if @category.errors.any? %>
      <div class="text-red-500 text-sm mt-2">
        <ul>
          <% @category.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
  </div>

  <div class="space-y-4">
    <%= f.submit 'Create Category', class: 'w-full py-3 px-6 bg-green-500 text-white font-semibold rounded-lg shadow-md hover:bg-green-600 focus:outline-none focus:ring-2 focus:ring-green-300' %>
  </div>
<% end %>

<div class="text-center mt-6">
  <%= link_to 'Back to Categories', admin_categories_path, class: 'inline-block py-2 px-6 bg-gray-300 text-gray-700 rounded-lg hover:bg-gray-400 focus:outline-none focus:ring-2 focus:ring-gray-200' %>
</div>
