<div class="container mx-auto px-4">
  <h1 class="text-center text-3xl font-semibold my-6">Categories</h1>

  <%= link_to 'New Category', new_admin_category_path, class: 'bg-blue-500 text-white py-2 px-6 rounded-lg mb-6 inline-block max-w-fit hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-blue-300' %>

  <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
    <% @categories.each do |category| %>
      <div class="bg-white border border-gray-200 rounded-lg shadow-md p-6 flex flex-col items-start">
        <h3 class="text-xl font-semibold text-gray-800 mb-4"><%= category.name %></h3>

        <div class="flex space-x-2">
          <%= link_to 'Edit', class: 'bg-yellow-500 text-white py-2 px-4 rounded-lg hover:bg-yellow-600 focus:outline-none focus:ring-2 focus:ring-yellow-300' %>
          <%= button_to 'Delete', admin_category_path(category), method: :delete, data: { confirm: 'Are you sure you want to delete this category?' }, class: 'bg-red-500 text-white py-2 px-4 rounded-lg hover:bg-red-600 focus:outline-none focus:ring-2 focus:ring-red-300' %>
        </div>
      </div>
    <% end %>
  </div>
</div>
